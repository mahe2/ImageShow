<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/adapter_special_margin"
    app:cardBackgroundColor="@color/white"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/adapter_special_width">

        <ImageView
            android:id="@+id/adapter_special_icon"
            android:layout_width="@dimen/adapter_special_width"
            android:layout_height="@dimen/adapter_special_width"
            android:layout_alignParentStart="true"
            android:scaleType="centerCrop"
            android:contentDescription="@string/app_name" />

        <TextView
            android:id="@+id/adapter_special_name"
            style="@style/Text.TextBody"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/adapter_special_margin"
            android:layout_toEndOf="@id/adapter_special_icon"
            android:paddingEnd="@dimen/adapter_special_padding"
            android:paddingStart="@dimen/adapter_special_padding" />

        <TextView
            android:id="@+id/adapter_special_description"
            style="@style/Text.SubTextBody"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/adapter_special_name"
            android:layout_toEndOf="@id/adapter_special_icon"
            android:paddingEnd="@dimen/adapter_special_padding"
            android:paddingStart="@dimen/adapter_special_padding" />

    </RelativeLayout>


</android.support.v7.widget.CardView>